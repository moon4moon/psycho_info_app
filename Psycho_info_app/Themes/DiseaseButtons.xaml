<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="MyGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#89C2D9" Offset="0.05" />
        <GradientStop Color="#61A5C2" Offset="0.5" />
        <GradientStop Color="#89C2D9" Offset="0.95" />
    </LinearGradientBrush>

    <Style TargetType="Button" x:Key="Disease_Button">
        <Setter Property="FontSize" Value="25"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#dfA9D6E5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="0 7 0 7"/>
        <Setter Property="Padding" Value="0 10 0 10"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>