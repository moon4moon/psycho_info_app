<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <LinearGradientBrush x:Key="MyGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#012A4A" Offset="0.5" />
        <GradientStop Color="Black" Offset="1" />
    </LinearGradientBrush>

    <Style TargetType="Border" x:Key="Border_Title">
        <Setter Property="Background" Value="{StaticResource MyGradient}"/>
        <Setter Property="Margin" Value="0 0 0 10"/>
        <Setter Property="Height" Value="140"/>
    </Style>
    
    <Style TargetType="TextBlock" x:Key="Page_Title">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect 
                    Color="Black" 
                    Direction="320" 
                    ShadowDepth="10" 
                    Opacity="1" 
                    BlurRadius="15" />
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="50,0,0,0"/>
    </Style>
    
</ResourceDictionary>