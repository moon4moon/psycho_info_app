<Window x:Class="Psycho_info_app.TESTOWE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Psycho_info_app"
        mc:Ignorable="d"
        Title="TESTOWE" Height="450" Width="800">
    <ScrollViewer>
        <StackPanel Background="Transparent">
            <Border Background="#012A4A" 
                    Height="140"
                    Margin="0 0 0 10">

                <TextBlock Text="DiseaseName"
                           Name="Name"
                           Foreground="White"/>

            </Border>

            <StackPanel>
                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Informations">

                    </StackPanel>
                </Border>

                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Reasons">

                    </StackPanel>
                </Border>

                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Symptoms">

                    </StackPanel>
                </Border>

                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Results">

                    </StackPanel>
                </Border>

                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Counteractions">

                    </StackPanel>
                </Border>
                
                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Examples">

                    </StackPanel>
                </Border>

                <Border Background="Yellow"
                            Height="auto"
                            Margin="0 0 0 10">
                    <StackPanel Name="Behavior">

                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
